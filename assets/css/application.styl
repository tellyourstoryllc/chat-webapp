@import 'reset.css'

link-color = #417ACE

.pull-left
  float left

.pull-right
  float right

.clearfix
  &:before, &:after
    content ""
    display table
    line-height 0
  &:after
    clear both

html
  min-height 100%

body
  font-family Helvetica, Arial, sans-serif
  overflow hidden

a
  color link-color

.navbar
  padding 10px 10px 0

  a
    text-decoration none

.brand
  float left
  margin-bottom 10px
  font-size 16px

  > a
    color link-color

.empty-content-page
  text-align center
  margin-top 20px
  margin-bottom 20px

room-sidebar-width = 200px

.rooms-sidebar
  position fixed
  width: room-sidebar-width

.rooms-list
  width 100%

.room-list-item

  > a
    display block
    width 200px
    overflow hidden

    border-top 1px solid rgba(255,255,255, .2)
    border-bottom 1px solid rgba(0,0,0, .15)
    padding 10px
    background-color #313947
    color #aaa
    text-decoration none

    &:hover
      color #ccc

    &.active
      background-color #242B37
      color #eee
      border-top-color transparent
      border-bottom-color transparent

.room-content
  margin-left room-sidebar-width + 20px

room-members-sidebar-width = 150px

.room-members-sidebar
  position fixed
  right 10px
  width room-members-sidebar-width
  overflow hidden

  .room-member
    color #999
    font-size 12px
    line-height 1.2em

.room-container
  position absolute
  margin-right room-members-sidebar-width + 20px

  .room-info
    border 1px solid #B4B4B4
    background-color #E6E6E6

  .room-info-table
    width 100%

    td
      padding 2px 5px

  .room-permalink
    text-decoration none

  .invite-link
    text-align right

.messages
  // Scrollable.
  overflow auto

  box-sizing border-box
  border-left 1px solid #B4B4B4
  border-right 1px solid #B4B4B4

.message
  border-top 1px solid #ccc
  font-size 14px

  .message-table
    width 100%

  .sender-cell, .body-cell
    padding 7px 5px 5px 5px
    vertical-align top

  .sender-cell
    width 150px
    background-color #f0f0f0
    text-align right

  .sender
    box-sizing border-box
    width 150px
    height 1.2em
    padding 0 5px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .emoticon
    height 32px
    width auto

  .status
    float right
    margin 0 0 5px 10px
    color #ccc
    font-size 10px

  .message-body
    white-space pre-wrap

.send-message-area
  position absolute
  bottom 0
  box-sizing border-box
  height 45px
  padding 5px
  border 1px solid #B4B4B4
  border-bottom 0
  background-color #E6E6E6

  .send-message-text
    width 300px
    height 27px
    font-size 12px

    &:focus
      outline 0

  .send-message-file-button
    position absolute
    top 5px
    right 63px
    margin 0
    padding 8px
    font-size 14px
    width 70px

  .send-message-file
    display none

  .send-button
    position absolute
    top 5px
    right 5px
    margin 0
    padding 8px
    font-size 14px
