@import 'reset.css'


body {
  margin: 10px;
  font-family: Helvetica, Arial, sans-serif;
}

.brand
  margin-bottom 10px
  font-size 16px

  > a
    color #417ACE
    text-decoration none

.room
  margin 10px 0

  > a
    display block
    width 200px
    overflow hidden

    border 1px solid #ccc
    border-radius 3px
    padding 10px
    background-color #eee
    color #888
    text-decoration none

    &:hover
      background-color #f8f8f8

.message {
  margin-top 5px
  border-top 1px solid #ccc
  padding-top 5px
  font-size 14px

  .timestamp {
    color #ccc
    font-size 10px
  }
}
