@import 'reset.css'


.clearfix
  &:before, &:after
    content ""
    display table
    line-height 0
  &:after
    clear both


body {
  margin: 10px;
  font-family: Helvetica, Arial, sans-serif;
}

.brand
  margin-bottom 10px
  font-size 16px

  > a
    color #417ACE
    text-decoration none

room-sidebar-width = 200px

.rooms-sidebar
  position fixed

.rooms-list
  width room-sidebar-width

.room-list-item
  margin 10px 0

  > a
    display block
    width 200px
    overflow hidden

    border 1px solid #ccc
    border-radius 3px
    padding 10px
    background-color #eee
    color #888
    text-decoration none

    &:hover
      background-color #f8f8f8

.room-content
  margin-left room-sidebar-width + 40px

room-members-sidebar-width = 150px

.room-members-sidebar
  position fixed
  right 10px
  width room-members-sidebar-width
  overflow hidden

  .room-member
    color #999
    font-size 12px
    line-height 1.2em

.room-container
  margin-right room-members-sidebar-width + 20px

.message
  margin-top 5px
  border-top 1px solid #ccc
  padding-top 5px
  font-size 14px

  .message-table
    width 100%

  .sender
    width 150px
    height 1.2em
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .status
    float right
    margin 0 0 5px 10px
    color #ccc
    font-size 10px

.send-message-area
  margin-top 10px

  .send-message-text
    width 300px
    height 27px
    font-size 12px

  .send-button
    position relative
    top -11px
    padding 8px
    font-size 14px
