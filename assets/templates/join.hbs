<div class='empty-content-page'>
  {{#if userMessage}}
    <div class='alert alert-error'>
      {{userMessage}}
    </div>
  {{/if}}

  {{#if isLoggedIn}}
    Joining Group...
  {{else}}
    {{#if room.isLoaded}}
      <div class='room-alert-content logged-out-join'>
        <div class='room-title'>
          <div class='avatar'>
            <img {{bind-attr src='room.avatarUrl'}} class='medium-avatar-image'>
          </div>
          <div class='room-name-info-container'>
            <div class='room-name'>{{room.name}}</div>
            <div class='room-topic'>{{room.topic}}</div>
          </div>
          <div class='clearfix'></div>
        </div>

        <div class='room-alert-message'>
          <div class='subtitle'>These members are already inside:</div>
        </div>
        <div class='members-preview'>
          {{#each user in alphabeticRoomMembers}}
            <div class='member-preview'>
              {{room-avatar room=user showStatus=false alwaysShowAvatar=true}}
              <span class='username'>{{user.name}}</span>
            </div>
          {{/each}}
          {{#if moreRoomMembers}}
            and {{moreRoomMembers}} more
          {{/if}}
        </div>

        <div class='signup-or-login'>
          <div class='title'>To enter</div>
          <div>
            {{#link-to 'signup'}}Sign Up{{/link-to}}
            or
            {{#link-to 'login'}}Log In{{/link-to}}
          </div>
        </div>
      </div>
    {{else}}
      <p>Loading...</p>
    {{/if}}
  {{/if}}
</div>
