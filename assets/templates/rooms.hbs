<div class='rooms-sidebar'>
  <h1>Rooms</h1>

  {{#if roomsLoaded}}
    {{#if rooms}}
      <ul class='rooms-list'>
        {{#each room in rooms}}
          <li class='room-list-item' {{action 'requestNotificationPermission'}}>
            {{#link-to 'rooms.room' room}}{{room.name}}{{/link-to}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>You currently don't have access to any rooms.</p>
    {{/if}}
  {{else}}
    Loading...
  {{/if}}
</div>

<div class='room-content'>
  {{outlet}}
</div>
