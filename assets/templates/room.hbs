<div>{{name}}</div>
{{#if topic}}
  <div>{{topic}}</div>
{{/if}}
<div>Invite Link: <a {{bind-attr href='joinUrl'}}>{{joinUrl}}</a></div>

<div class='messages'>
  {{#each message in messages}}
    <div class='message'>
      <div class='sender'>{{message.user.name}}</div>
      <div class='text'>{{message.text}}</div>
      <div class='timestamp'>{{message.createdAt}}</div>
    </div>
  {{/each}}
</div>

<div class='reply-area'>
  {{input type='text' value=text action='sendMessage'}}
  <button type='button' {{action 'sendMessage'}}>Send</button>
</div>
