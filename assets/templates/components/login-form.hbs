{{! Use a form tag to capture enter key. }}
<form class='login-form form' {{action 'attemptLogin' on='submit'}}>
  {{#if showClose}}
    <a href='#' class='close' {{action 'close'}}>&times;</a>
  {{/if}}
  <div class='title'>Log In</div>
  {{#if errorMessage}}
    <div class='alert alert-error'>{{errorMessage}}</div>
  {{/if}}
  <div class='control-group'>
    {{input type='email' value=email placeholder='Email'}}
  </div>
  <div class='control-group'>
    {{input type='password' value=password placeholder='Password'}}
  </div>
  <div class='form-actions'>
    <div class='related-link'>
      Don't have an account?<br>
      {{#link-to 'signup'}}Sign Up{{/link-to}}
    </div>
    <div class='related-link'>
      {{#link-to 'forgot-password'}}Forgot Password{{/link-to}}
    </div>
    <button type='submit' class='app-btn' {{bind-attr disabled='isLoginDisabled'}}>Log In</button>
    <div class='clearfix'></div>
  </div>

  <hr>

  <div class='facebook-group'>
    <div class='facebook-or'>OR</div>
    <button type='button' class='app-btn' {{bind-attr disabled='isLoginDisabled'}}
      {{action 'attemptLogInWithFacebook'}}>
      Log In With Facebook
    </button>
  </div>
</form>
